<resources 
	xmlns="http://jndi-resources.googlecode.com/1.0/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jndi-resources.googlecode.com/1.0/ http://www.prados.fr/xsd/1.0/jndi-resources.xsd"
	id="jndi-web-sample"
>
	<resource name="jndi-web-sample/jdbc/Default" familly="jdbc/default" />
	
	<resource name="jndi-web-sample/mail/Default" familly="mail/default" >
		<property name="store.protocol" value="imap"/>
		<property name="transport.protocol" value="smtp"/>
		<property name="transport.user" value="smtp@user.org"/>
	</resource>

	<resource name="jndi-web-sample/mail/email" familly="mail/email">
 		<property name="email" value="${mon.e-mail}"/>
	</resource>

	<resource name="jndi-web-sample/url/Default" familly="url/default">
 		<property name="url" value="${url.default}"/>
	</resource>

	<resource name="jndi-web-sample/host/Default" familly="host/default">
 		<property name="host" value="${host.default}"/>
	</resource>

	<resource name="jndi-web-sample/ejb/LookupJndi" familly="link/default">
 		<property name="link" value="jndi-ejb-sample/ejb/LookupJndi"/>
	</resource>

</resources>